<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coding4lif3.contentproviderexample" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.coding4lif3.contentproviderexample.PersonListActivity"
            android:label="@string/title_person_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coding4lif3.contentproviderexample.PersonDetailActivity"
            android:label="@string/title_person_detail"
            android:parentActivityName="com.coding4lif3.contentproviderexample.PersonListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coding4lif3.contentproviderexample.PersonListActivity" />
        </activity>
    </application>

</manifest>
